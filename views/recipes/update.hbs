<form action="/recipes/details?id={{_id}}" method="POST">
<input type="text" value="{{recipe.title}}" name="title" placeholder="Title">
<input type="text" value="{{recipe.level}}" name="level" placeholder="Level">
<input type="text" value="{{recipe.duration}}" name="duration" placeholder="Duration">
<input type="text" hidden value="{{recipe._id}}" name="id">
<button>Edit recipe</button>
</form>